<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/logoLogueo"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:srcCompat="@mipmap/ic_logo"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"  />

    <EditText
        android:id="@+id/emailLogueo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Usuario javeriano"
        android:inputType="textPersonName"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>


    <EditText
        android:id="@+id/passLogueo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <RadioButton
        android:id="@+id/rBSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No cerrar sesión"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <Button
        android:id="@+id/btnLogueo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ingresar"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        />

    <TextView
        android:id="@+id/textViewRegistrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Registrate"
        android:textAlignment="center"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/textViewValidar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Valida tu correo"
        android:textAlignment="center"
        android:textSize="20sp" />

</LinearLayout>